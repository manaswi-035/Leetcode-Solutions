class Solution {
    public int minimumCost(int[] nums) {
        int first = nums[0];

        int mn1 = Integer.MAX_VALUE;
        int mn2 = Integer.MAX_VALUE;

        for (int i = 1; i < nums.length; i++) {
            int x = nums[i];
            if (x < mn1) {
                mn2 = mn1;
                mn1 = x;
            } else if (x < mn2) {
                mn2 = x;
            }
        }

        return first + mn1 + mn2;
    }
}
